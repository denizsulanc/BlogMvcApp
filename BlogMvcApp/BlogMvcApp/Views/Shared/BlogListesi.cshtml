@model IEnumerable<BlogMvcApp.Models.BlogModel>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning" role="alert">
        <h3>Kayıt bulunamadı</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="mb-5">
            <h3 class="page-link">
                @blog.Baslik
            </h3>
            <p>
                @blog.EklenmeTarihi
            </p>
            @if (blog.KategoriAdi == "C#")
            {
                <img class="img-fluid" src="~/Img/mrrobot.jpg" style="height:300px; width:auto;" /> <!--img-fluid responsive yapar-->
            }
            else if (blog.KategoriAdi == "Asp.net MVC")
            {
                <img class="img-fluid" src="~/Img/darlenenet.jpg" style="height:300px; width:auto;" />
            }
            else if (blog.KategoriAdi == "Windows Form")
            {
                <img class="img-fluid" src="~/Img/form.png" style="height:300px; width:auto;" />
            }
            else if (blog.KategoriAdi == "C# Console")
            {
                <img class="img-fluid" src="~/Img/eliotconsole.png" style="height:300px; width:auto;" />
            }
            else if (blog.KategoriAdi == "SQL")
            {
                <img class="img-fluid" src="~/Img/sql.jpg" style="height:300px; width:auto;" />
            }
            else if (blog.KategoriAdi == "Diziler")
            {
                <img class="img-fluid" src="~/Img/dominique.jpg" style="height:300px; width:auto;">
            }
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { @blog.Id }, new { @class = "btn btn-primary" })

        </div>
    }
}
