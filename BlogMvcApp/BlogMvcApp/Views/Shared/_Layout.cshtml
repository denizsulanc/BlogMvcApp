<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Blog Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>

<body class="">
    <div class="navbar navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="navbar-brand">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" style="border-color: #343a40">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Deniz'in Bloğu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <div class="navbar-collapse collapse d-inline-block">
                    <ul class="nav navbar-nav">
                        <li class="d-block">
                            <a href="/Blog/List" class="text-white text-decoration-none">Bloglar</a><!--Action ıd alamadığı için tüm bloglar gelir-->
                        </li>
                    </ul>
                </div>
            </div>
            <div>
                <a href="/Blog/Index" class="text-white text-decoration-none" style="font-size: 1.25rem; line-height: inherit; white-space: nowrap;">Admin Paneli Blog</a><span class="ml-3 mr-2 text-white">|</span>
                <a href="~/Category/Index" class="text-white text-decoration-none" style="font-size: 1.25rem; line-height: inherit; white-space: nowrap;">Admin Paneli Kategori</a>
            </div>
        </div>
    </div>
    <br />

    <div class="container body-content p-4">
        <div class="row mb-4">
            @if (IsSectionDefined("Slider"))
            {
                @RenderSection("Slider")
            }
        </div>
        <div class="row">
            @if (IsSectionDefined("SagKolon"))//Eğer bu isimde bir section varsa bu yapıyı kullan demektir
            {
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <div class="col-md-4">
                    @RenderSection("SagKolon")
                </div>
            }
            else
            {
                <div class="col-md-12">
                    @RenderBody()
                </div>
            }
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Deniz SULANÇ tarafından yapılmıştır </p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>